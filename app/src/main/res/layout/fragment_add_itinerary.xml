<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addFragment.AddItineraryFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/container_add_itinerary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:hint="Номер"
                app:endIconMode="clear_text"
                app:hintAnimationEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_number_itinerary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/StyleBackgroundBlocks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_background_main_block">

                <TextView
                    android:id="@+id/turnout_label"
                    style="@style/StyleTextTitleBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:text="явка"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@id/block_turnout"
                    app:layout_constraintStart_toStartOf="@id/block_turnout"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ending_label"
                    style="@style/StyleTextTitleBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="рабочее время"
                    app:layout_constraintEnd_toEndOf="@id/block_ending"
                    app:layout_constraintStart_toStartOf="@id/block_ending"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/block_turnout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shape_background_data_block"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp"

                    app:layout_constraintEnd_toStartOf="@id/block_ending"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/turnout_label">

                    <TextView
                        android:id="@+id/date_turnout"
                        style="@style/StyleTextDataMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.2"
                        android:text="01.01.22" />

                    <TextView
                        android:id="@+id/time_turnout"
                        style="@style/StyleTextDataMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.2"
                        android:text="00:00" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/block_ending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_background_data_block"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/block_turnout"
                    app:layout_constraintTop_toBottomOf="@id/ending_label">

                    <TextView
                        android:id="@+id/data_ending"
                        style="@style/StyleTextDataMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.2"
                        android:text="01.01.22" />

                    <TextView
                        android:id="@+id/time_ending"
                        style="@style/StyleTextDataMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.2"
                        android:text="00:00" />
                </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/selector_rest_point_of_turnover"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_background_tab_layout"
                    app:layout_constraintEnd_toEndOf="@id/block_ending"
                    app:layout_constraintStart_toStartOf="@id/block_turnout"
                    app:layout_constraintTop_toBottomOf="@id/block_ending"
                    app:tabGravity="fill"
                    app:tabIndicator="@drawable/tab_indicator"
                    app:tabIndicatorAnimationMode="elastic"
                    app:tabIndicatorColor="@color/white"
                    app:tabIndicatorGravity="stretch"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/text_color"
                    app:tabTextAppearance="@style/StyleSecondaryText"
                    app:tabTextColor="@color/text_color" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/StyleBackgroundBlocks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_background_main_block">

                <TextView
                    android:id="@+id/loco_label"
                    style="@style/StyleTextTitleBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="локомотив"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/loco_data_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_background_data_block"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/loco_label">

                    <TextView
                        style="@style/StyleTextData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="2эс4к №022" />

                    <TextView
                        style="@style/StyleTextData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="08:10 - 19:50" />

                </FrameLayout>

                <ImageButton
                    android:id="@+id/btn_add_loco"
                    style="@style/StyleMiniFAB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/loco_data_block" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/StyleBackgroundBlocks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_background_main_block">

                <TextView
                    android:id="@+id/train_label"
                    style="@style/StyleTextTitleBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="поезд"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/train_data_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_background_data_block"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/train_label">

                    <TextView
                        style="@style/StyleTextData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="0dp"
                        android:text="№ 2222 вес 1890 оси 224 уд 57" />

                    <TextView
                        style="@style/StyleTextData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="0dp"
                        android:text="Лужская - Луга" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_add_train"
                    style="@style/StyleMiniFAB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/train_data_block" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/StyleBackgroundBlocks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_background_main_block">

                <TextView
                    android:id="@+id/passenger_label"
                    style="@style/StyleTextTitleBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="пасссажиром"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/passenger_data_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_background_data_block"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/passenger_label">

                    <TextView
                        style="@style/StyleTextData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="0dp"
                        android:text="Луга - Гатчина Т.Б." />

                    <TextView
                        style="@style/StyleTextData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="0dp"
                        android:text="19:55 - 21:45" />

                    <TextView
                        style="@style/StyleTextData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="0dp"
                        android:text="п.№ 6132" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_add_passenger"
                    style="@style/StyleMiniFAB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/passenger_data_block" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/StyleBackgroundBlocks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="76dp"
                android:background="@drawable/shape_background_main_block">

                <TextView
                    android:id="@+id/notes_label"
                    style="@style/StyleTextTitleBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="примечания"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/notes_text"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Добавьте примечание"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notes_label">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btn_open_camera"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_photo_camera_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notes_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_save"
        android:layout_width="196dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:text="@string/text_fab_save"
        android:textColor="@color/white"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayExtended" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>