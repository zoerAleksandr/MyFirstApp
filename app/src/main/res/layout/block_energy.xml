<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/block_energy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/shape_background_main_block"
    android:padding="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.68"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/time_data_loco_block_layout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <TextView
        android:id="@+id/subtitle_block_energy_text_view"
        style="@style/StyleSecondaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_energy_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@id/energy_acceptance_1"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/energy_acceptance_1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/energy_acceptance_1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:boxBackgroundColor="@color/background_data"
        app:endIconMode="clear_text"
        app:errorIconDrawable="@null"
        app:layout_constraintEnd_toStartOf="@id/energy_delivery_1"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/subtitle_block_energy_text_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/data_energy_acceptance_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="принято"
            android:imeOptions="actionNone"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:textAppearance="@style/StyleTextDataMini" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/energy_delivery_1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        app:boxBackgroundColor="@color/background_data"
        app:endIconMode="clear_text"
        app:errorIconDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/energy_acceptance_1"
        app:layout_constraintTop_toBottomOf="@id/subtitle_block_energy_text_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/data_energy_delivery_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="сдано"
            android:imeOptions="actionNone"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:textAppearance="@style/StyleTextDataMini" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/image_recovery_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@id/recovery_acceptance_1"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/recovery_acceptance_1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/recovery_acceptance_1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:boxBackgroundColor="@color/background_data"
        app:endIconMode="clear_text"
        app:errorIconDrawable="@null"
        app:layout_constraintEnd_toStartOf="@id/recovery_delivery_1"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/energy_acceptance_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/data_recovery_acceptance_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:textAppearance="@style/StyleTextDataMini" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/recovery_delivery_1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:boxBackgroundColor="@color/background_data"
        app:endIconMode="clear_text"
        app:errorIconDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recovery_acceptance_1"
        app:layout_constraintTop_toBottomOf="@id/energy_delivery_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/data_recovery_delivery_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:textAppearance="@style/StyleTextDataMini" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recovery_delivery_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="расход: " />

        <TextView
            android:id="@+id/result_energy_sec1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="0"
            tools:text="11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="рекуперация: " />

        <TextView
            android:id="@+id/result_recovery_sec1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            tools:text="3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>